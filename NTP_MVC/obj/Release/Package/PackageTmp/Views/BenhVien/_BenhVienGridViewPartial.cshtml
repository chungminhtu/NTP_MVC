@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "BenhVienGridView";
        settings.CallbackRouteValues = new { Controller = "BenhVien", Action = "BenhVienGridViewPartial" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "BenhVien", Action = "BenhVienGridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "BenhVien", Action = "BenhVienGridViewPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "BenhVien", Action = "BenhVienGridViewPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "ID_BENHVIEN_KHO";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.Columns.Add("TEN_BENHVIEN");
        settings.Columns.Add("DIA_CHI");
        settings.Columns.Add("CAPQUANLY");
        settings.Columns.Add("ID_MATINH");
        settings.Columns.Add("ID_HUYEN");
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()